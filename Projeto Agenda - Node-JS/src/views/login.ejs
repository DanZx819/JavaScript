<%- include('./includes/head') %> <%- include('./includes/nav') %>
<div class="container">
  <div class="row">
    <div class="clo-lg-2"></div>
    <div class="clo-lg-8 my-5">
      <h1 class="display-1 text-center">Criar ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include('./includes/messages') %>

      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Faça o seu cadastro com o seu email e senha!</p>
          <form action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Seu email</label>
              <input type="email" class="form-control" name="email"/>
            </div>
            <div class="form-group">
              <label>Sua Senha</label>
              <input type="password" class="form-control" name="password"/>
            </div>

            <button type="submit" class="btn btn-primary">Criar minha conta</button>
          </form>
        </div>
        <div class="col-lg">
          <h4>Entrar no sistema</h4>
          <p>Faça o seu login com o seu email e senha!</p>
          <form action="/login/login" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Seu email</label>
              <input type="email" class="form-control" name="email"/>
            </div>
            <div class="form-group">
              <label>Sua Senha</label>
              <input type="password" class="form-control" name="password"/>
            </div>

            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
        </div>
      </div>

      <div class="clo-lg-2"></div>
    </div>
  </div>

  <%- include('./includes/footer') %>
</div>
